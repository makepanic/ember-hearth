<div class="ui fluid container">
    <div class="ui celled stackable grid">
        <div class="three wide column">
            <h3 class="ui header">Ember projects</h3>
            <div class="ui fluid buttons">
                {{#link-to 'app.new' class='ui labeled icon green button'}}
                    <i class="icon star"></i>
                    New app
                {{/link-to}}
                <button class="ui right labeled icon button" {{action 'addApp'}}>
                    <i class="icon plus"></i>
                    add existing
                </button>
            </div>

            <div class="ui vertical menu secondary fluid pointing ">
              {{#each model as |app|}}
                {{#link-to 'app.detail' app class='item'}}
                    <div class="ui blue label">{{app.package.version}}</div>
                  {{#if app.running}}
                      <div class="ui circular green label" title="running"></div>
                  {{/if}}
                    <i class="icon {{if app.isAddon 'settings' 'desktop'}}"></i>
                  {{app.name}}
                {{/link-to}}
              {{/each}}
            </div>
        </div>
        <div class="thirteen wide column">
          {{outlet}}
        </div>
    </div>
</div>