<h2 class="ui header">
    <div class="content">
        Create new ember project
    </div>
</h2>

<form class="ui form">
    <div class="field">
        <label>Project path</label>
        <div class="ui labeled button" tabindex="0">
            <div class="ui button" {{action 'setPath'}}>
                <i class="folder outline icon"></i> Set path
            </div>
            <a class="ui basic left pointing label">{{path}}</a>
        </div>
    </div>
    <div class="field">
        <label for="fruit">Project type</label>
        <select class="ui fluid dropdown">
            <option value="">Application</option>
            <option value="AL">Addon</option>
        </select>
    </div>

    <button class="ui button" type="submit" {{action 'initProject'}}>Create</button>
</form>

<h3 class="ui header">stdout</h3>
<pre class="stdout">{{stdout}}</pre>

<h3 class="ui header">stderr</h3>
<pre class="stderr">{{stderr}}</pre>

{{outlet}}
